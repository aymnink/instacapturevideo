---
import Layout from '../../../layouts/Layout.astro';
import CategoryHero from '../../../components/CategoryHero.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';

const title = "Best Practices for Instagram Video Quality";
const description = "Learn how to maintain and optimize video quality for Instagram uploads and downloads.";
const publishDate = "2024-03-10";

const breadcrumbs = [
  { name: "Home", href: "/" },
  { name: "Blog", href: "/blog" },
  { name: "Instagram Tips", href: "/blog/instagram-tips" },
  { name: title, href: "" }
];

const tips = [
  {
    title: "Optimal Video Settings",
    content: "Use 1080p resolution, 30fps frame rate, and H.264 codec for best results on Instagram."
  },
  {
    title: "File Size Management",
    content: "Keep files under 4GB and compress efficiently to maintain quality while meeting Instagram's requirements."
  },
  {
    title: "Aspect Ratio Guidelines",
    content: "Follow Instagram's recommended ratios: 1:1 for square, 9:16 for stories, and 16:9 for landscape."
  }
];
---

<Layout title={title} description={description}>
  <CategoryHero
    title={title}
    description={description}
    image="https://images.unsplash.com/photo-1611162618071-b39a2ec055fb"
  />

  <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <Breadcrumbs paths={breadcrumbs} />

    <div class="mt-8 prose prose-lg max-w-none">
      <div class="text-sm text-gray-500 mb-8">
        Published on {new Date(publishDate).toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        })}
      </div>

      <p class="lead text-xl text-gray-600 mb-12">
        Maximize your video quality on Instagram with these technical best practices and optimization tips.
      </p>

      {tips.map(tip => (
        <div class="mb-12">
          <h2 class="text-2xl font-bold text-gray-900 mb-4">{tip.title}</h2>
          <p class="text-gray-600">{tip.content}</p>
        </div>
      ))}

      <div class="bg-brand-blue/5 rounded-xl p-8 mt-12">
        <h2 class="text-xl font-bold text-brand-blue mb-4">Download High-Quality Videos</h2>
        <p class="text-gray-600">
          Use InstaCapture to download Instagram videos while maintaining their original quality.
        </p>
      </div>
    </div>
  </article>
</Layout>