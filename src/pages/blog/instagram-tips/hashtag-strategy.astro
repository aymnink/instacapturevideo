---
import Layout from '../../../layouts/Layout.astro';
import CategoryHero from '../../../components/CategoryHero.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';

const title = "Instagram Hashtag Strategy Guide 2024";
const description = "Develop an effective hashtag strategy to increase your Instagram reach and engagement.";
const publishDate = "2024-03-01";

const breadcrumbs = [
  { name: "Home", href: "/" },
  { name: "Blog", href: "/blog" },
  { name: "Instagram Tips", href: "/blog/instagram-tips" },
  { name: title, href: "" }
];

const sections = [
  {
    title: "Research and Analysis",
    content: "Learn how to research and analyze hashtag performance for your niche."
  },
  {
    title: "Strategic Implementation",
    content: "Develop a balanced mix of broad, niche, and branded hashtags."
  },
  {
    title: "Monitoring Results",
    content: "Track hashtag performance and adjust your strategy based on data."
  }
];
---

<Layout title={title} description={description}>
  <CategoryHero
    title={title}
    description={description}
    image="https://images.unsplash.com/photo-1611162616305-c69b3396c604"
  />

  <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <Breadcrumbs paths={breadcrumbs} />

    <div class="mt-8 prose prose-lg max-w-none">
      <div class="text-sm text-gray-500 mb-8">
        Published on {new Date(publishDate).toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        })}
      </div>

      <p class="lead text-xl text-gray-600 mb-12">
        Master the art of hashtag usage to improve your content's visibility and reach on Instagram.
      </p>

      {sections.map(section => (
        <div class="mb-12">
          <h2 class="text-2xl font-bold text-gray-900 mb-4">{section.title}</h2>
          <p class="text-gray-600">{section.content}</p>
        </div>
      ))}

      <div class="bg-brand-blue/5 rounded-xl p-8 mt-12">
        <h2 class="text-xl font-bold text-brand-blue mb-4">Research Competitors</h2>
        <p class="text-gray-600">
          Use InstaCapture to save and analyze successful posts in your niche for hashtag inspiration.
        </p>
      </div>
    </div>
  </article>
</Layout>