---
import Layout from '../../layouts/Layout.astro';
import CategoryHero from '../../components/CategoryHero.astro';
import { getImageWithParams } from '../../utils/images';

const title = "Photography & Social Media Tools";
const description = "Useful tools for photographers and content creators.";

const tools = [
  {
    title: "Instagram Media Downloader",
    description: "Download photos, videos, and carousel posts from Instagram easily and legally.",
    image: "https://images.unsplash.com/photo-1611162617474-5b21e879e113",
    href: "/tools/instagram-downloader",
    category: "Social Media"
  }
];
---

<Layout title={title} description={description}>
  <CategoryHero
    title={title}
    description={description}
    image="https://images.unsplash.com/photo-1611162617474-5b21e879e113"
  />

  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {tools.map(tool => (
          <article class="bg-white rounded-lg shadow-md overflow-hidden">
            <img 
              src={getImageWithParams(tool.image, 600)}
              alt={tool.title}
              class="w-full h-48 object-cover"
            />
            <div class="p-6">
              <div class="text-sm text-blue-600 font-semibold mb-2">{tool.category}</div>
              <h3 class="text-xl font-bold mb-2">
                <a href={tool.href} class="hover:text-blue-600 transition-colors">
                  {tool.title}
                </a>
              </h3>
              <p class="text-gray-600">{tool.description}</p>
            </div>
          </article>
        ))}
      </div>

      <div class="mt-16 bg-blue-50 rounded-xl p-8">
        <h2 class="text-2xl font-bold mb-4">Coming Soon</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <div class="bg-white p-6 rounded-lg shadow-sm">
            <h3 class="font-semibold mb-2">Photo EXIF Viewer</h3>
            <p class="text-gray-600">View and analyze photo metadata and camera settings.</p>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-sm">
            <h3 class="font-semibold mb-2">Golden Hour Calculator</h3>
            <p class="text-gray-600">Find the perfect time for photography at any location.</p>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-sm">
            <h3 class="font-semibold mb-2">Social Media Image Resizer</h3>
            <p class="text-gray-600">Optimize images for various social media platforms.</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>