const title = "Santorini Sunset Photography Guide";
const description = "Discover the most breathtaking sunset spots and iconic photo locations in Santorini, from blue domes to caldera views.";

const photoSpots = [
  {
    title: "Oia Castle Ruins",
    description: "The most famous sunset viewpoint overlooking the windmills and caldera.",
    image: "https://images.unsplash.com/photo-1611001897293-561e0c30f938",
    coordinates: "36.4617¬∞ N, 25.3756¬∞ E",
