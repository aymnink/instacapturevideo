  },
  {
    title: "Three Blue Domes",
    description: "Iconic blue-domed churches of St. Spyridon and Anastasios.",
    image: "https://images.unsplash.com/photo-1542086490-11a8654691d0",
    coordinates: "36.4615¬∞ N, 25.3752¬∞ E",
    bestTime: "Early Morning/Sunset",
    difficulty: "Moderate",
    crowdLevel: "High"
  },
  {
    title: "Imerovigli Viewpoint",
    description: "Elevated caldera views with Skaros Rock silhouette.",
    image: "https://images.unsplash.com/photo-1669408276432-10cd3a07fe89",
    coordinates: "36.4350¬∞ N, 25.4278¬∞ E",
    bestTime: "Sunset",
    difficulty: "Easy",
    crowdLevel: "Moderate"
  },
  {
    title: "Ammoudi Bay",
    description: "Red cliffs and fishing boats with sunset reflections.",
    image: "https://images.unsplash.com/photo-1675154092378-1ca4978ec6a5",
    coordinates: "36.4621¬∞ N, 25.3705¬∞ E",
    bestTime: "Late Afternoon",
    difficulty: "Moderate",
    crowdLevel: "Moderate"
  },
  {
    title: "Prophet Elias Monastery",
    description: "Highest point on the island with 360-degree views.",
    image: "https://images.unsplash.com/photo-1531986362435-16b427eb9c26",
    coordinates: "36.4006¬∞ N, 25.4447¬∞ E",
    bestTime: "Sunset",
    difficulty: "Easy",
    crowdLevel: "Low"
  }
];

const photographyTips = [
  {
    title: "Timing is Everything",
    content: "Arrive at least 2 hours before sunset to secure prime spots, especially in Oia.",
    icon: "‚è∞"
  },
  {
    title: "Equipment Essentials",
    content: "Bring ND filters for balanced exposures between bright sky and dark caldera.",
    icon: "üì∏"
  },
  {
