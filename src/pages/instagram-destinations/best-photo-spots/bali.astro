---
import Layout from '../../../layouts/Layout.astro';
import CategoryHero from '../../../components/CategoryHero.astro';
import PhotoSpot from '../../../components/PhotoSpot.astro';
import PhotoTip from '../../../components/PhotoTip.astro';

const title = "Bali's Most Instagrammable Spots";
const description = "From rice terraces to temple gates, discover Bali's most photogenic locations.";

const photoSpots = [
  {
    title: "Tegalalang Rice Terraces",
    description: "Iconic emerald-green terraces with traditional farming methods.",
    image: "https://images.unsplash.com/photo-1675154092378-1ca4978ec6a5",
    coordinates: "8.4333¬∞ S, 115.2833¬∞ E",
    bestTime: "Sunrise",
    difficulty: "Easy",
    crowdLevel: "Moderate"
  },
  {
    title: "Gates of Heaven",
    description: "Majestic temple gates at Lempuyang Temple.",
    image: "https://images.unsplash.com/photo-1542086490-11a8654691d0",
    coordinates: "8.4115¬∞ S, 115.6171¬∞ E",
    bestTime: "Early Morning",
    difficulty: "Moderate",
    crowdLevel: "High"
  },
  {
    title: "Nusa Penida",
    description: "Dramatic cliffs and pristine beaches.",
    image: "https://images.unsplash.com/photo-1669408276432-10cd3a07fe89",
    coordinates: "8.7273¬∞ S, 115.5444¬∞ E",
    bestTime: "Morning",
    difficulty: "Moderate",
    crowdLevel: "High"
  }
];

const photographyTips = [
  {
    title: "Lighting",
    content: "Early morning offers best light and fewer tourists.",
    icon: "üåÖ"
  },
  {
    title: "Temple Etiquette",
    content: "Dress respectfully and bring sarongs for temple visits.",
    icon: "üôè"
  },
  {
    title: "Weather",
    content: "Plan around rainy season (October-April).",
    icon: "üå¶"
  }
