import PhotoTip from '../../../components/PhotoTip.astro';

const title = "Antelope Canyon Photography Guide";
const description = "Capture the mesmerizing light beams and flowing sandstone formations of Arizona's most photogenic slot canyon.";

const photoSpots = [
  {
    title: "Upper Antelope Canyon",
    description: "Famous for light beams and easier access.",
    image: "https://images.unsplash.com/photo-1572573309811-48474d1891b7",
    coordinates: "36.8619¬∞ N, 111.3743¬∞ W",
    bestTime: "10am-1pm",
    difficulty: "Easy",
    crowdLevel: "High"
  },
  {
    title: "Lower Antelope Canyon",
    description: "Narrower passages with unique formations.",
    image: "https://images.unsplash.com/photo-1542086490-11a8654691d0",
    coordinates: "36.8619¬∞ N, 111.3743¬∞ W",
    bestTime: "Morning",
    difficulty: "Moderate",
    crowdLevel: "High"
  },
  {
    title: "Rattlesnake Canyon",
    description: "Less crowded alternative with similar formations.",
    image: "https://images.unsplash.com/photo-1669408276432-10cd3a07fe89",
    coordinates: "36.8619¬∞ N, 111.3743¬∞ W",
    bestTime: "Midday",
    difficulty: "Moderate",
    crowdLevel: "Low"
  }
];

const photographyTips = [
  {
    title: "Light Beams",
    content: "Visit during peak hours for best light beam visibility. Book photography tours in advance.",
    icon: "‚òÄÔ∏è"
  },
  {
    title: "Camera Settings",
    content: "Use tripod when possible. ISO 400-800, f/8, varying shutter speeds.",
    icon: "üì∏"
  },
  {
    title: "Dust Protection",
    content: "Bring protective gear for your camera. Change lenses minimally.",
    icon: "üå™"
  }
