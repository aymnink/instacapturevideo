const title = "Moroccan Desert Photography Guide";
const description = "Capture the magic of Sahara's endless dunes and starlit skies.";

const photoSpots = [
  {
    title: "Erg Chebbi Dunes",
    description: "Massive orange dunes near Merzouga.",
    image: "https://images.unsplash.com/photo-1675154092378-1ca4978ec6a5",
    coordinates: "31.1527¬∞ N, 3.9747¬∞ W",
    bestTime: "Sunrise/Sunset",
    difficulty: "Moderate",
    crowdLevel: "Low"
  },
  {
    title: "Luxury Desert Camps",
    description: "Traditional camps with modern amenities.",
    image: "https://images.unsplash.com/photo-1542086490-11a8654691d0",
    coordinates: "31.1527¬∞ N, 3.9747¬∞ W",
    bestTime: "Night",
    difficulty: "Easy",
    crowdLevel: "Low"
  },
  {
    title: "Camel Treks",
    description: "Traditional desert transportation.",
    image: "https://images.unsplash.com/photo-1669408276432-10cd3a07fe89",
    coordinates: "31.1527¬∞ N, 3.9747¬∞ W",
    bestTime: "Golden Hour",
    difficulty: "Moderate",
    crowdLevel: "Low"
  }
];

const photographyTips = [
  {
    title: "Sand Protection",
    content: "Use weather-sealed gear and protective covers. Clean equipment regularly.",
    icon: "üèú"
  },
  {
    title: "Night Photography",
    content: "Use high ISO and wide apertures for star shots. Consider star trails.",
    icon: "üåü"
  },
  {
    title: "Composition",
    content: "Use dune lines as leading lines. Include people or camels for scale.",
    icon: "üì∏"
