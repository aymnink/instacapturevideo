---
import Layout from '../../../layouts/Layout.astro';
import CategoryHero from '../../../components/CategoryHero.astro';
import PhotoSpot from '../../../components/PhotoSpot.astro';
import PhotoTip from '../../../components/PhotoTip.astro';

const title = "Iceland's Diamond Beach Photography Guide";
const description = "Capture the magic of crystal ice blocks on black sand at one of Iceland's most photogenic locations.";

const photoSpots = [
  {
    title: "Diamond Beach",
    description: "Black sand beach with crystal ice formations.",
    image: "https://images.unsplash.com/photo-1669408276432-10cd3a07fe89",
    coordinates: "64.0784° N, 16.2306° W",
    bestTime: "Sunrise/Sunset",
    difficulty: "Easy",
    crowdLevel: "Moderate"
  },
  {
    title: "Jökulsárlón Glacier Lagoon",
    description: "Source of the ice diamonds, with floating icebergs.",
    image: "https://images.unsplash.com/photo-1542086490-11a8654691d0",
    coordinates: "64.0784° N, 16.2306° W",
    bestTime: "Blue Hour",
    difficulty: "Easy",
    crowdLevel: "Moderate"
  },
  {
    title: "Ice Cave Access Point",
    description: "Nearby access to seasonal ice caves.",
    image: "https://images.unsplash.com/photo-1675154092378-1ca4978ec6a5",
    coordinates: "64.0784° N, 16.2306° W",
    bestTime: "Winter",
    difficulty: "Moderate",
    crowdLevel: "Low"
  }
];

const photographyTips = [
  {
    title: "Ice Photography",
    content: "Use polarizing filters to control reflections. Get low for dramatic angles.",
    icon: "❄️"
  },
  {
    title: "Timing",
    content: "Visit during winter months for largest ice formations.",
    icon: "⏰"
  },
  {
    title: "Safety",
    content: "Never climb on ice blocks. Watch for incoming waves.",
    icon: "⚠️"
  }
];
---

<Layout title={title} description={description}>
  <CategoryHero
    title={title}
    description={description}
    image="https://images.unsplash.com/photo-1669408276432-10cd3a07fe89"
  />

  <article class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="prose prose-lg max-w-none mb-16">
      <p class="lead text-xl text-gray-600">
        Diamond Beach offers a unique landscape where glacial ice meets black volcanic sand.
      </p>
      
      <h2 class="text-3xl font-bold mt-12 mb-6">Prime Photo Locations</h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
      {photoSpots.map(spot => (
        <PhotoSpot {...spot} />
      ))}
    </div>

    <h2 class="text-3xl font-bold mb-6">Photography Tips</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-16">
      {photographyTips.map(tip => (
        <PhotoTip {...tip} />
      ))}
    </div>

    <div class="prose prose-lg max-w-none">
      <h2>Essential Information</h2>
      <h3>Best Seasons</h3>
      <ul>
        <li>Winter (November-March) for largest ice blocks</li>
        <li>Summer for midnight sun</li>
        <li>Shoulder seasons for northern lights</li>
      </ul>

      <h3>Equipment Recommendations</h3>
      <ul>
        <li>Wide-angle lens (16-35mm)</li>
        <li>Neutral density filters</li>
        <li>Polarizing filter</li>
        <li>Weather-sealed camera</li>
        <li>Sturdy tripod</li>
      </ul>

      <blockquote>
        <p>"Diamond Beach is nature's jewelry box, where ice and volcanic sand create an ever-changing gallery."</p>
      </blockquote>
    </div>
  </article>
</Layout>