    coordinates: "35.0038Â° N, 135.7812Â° E",
    bestTime: "Night",
    difficulty: "Easy",
    crowdLevel: "High"
  }
];

const photographyTips = [
  {
    title: "Timing is Everything",
    content: "Cherry blossoms peak for only about a week. Follow local bloom forecasts and be ready to adjust your schedule.",
    icon: "ðŸŒ¸"
  },
