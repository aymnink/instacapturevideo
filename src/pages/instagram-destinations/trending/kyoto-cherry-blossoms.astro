const description = "Master the art of capturing Japan's magical sakura season in Kyoto's most photogenic locations.";

const photoSpots = [
  {
    title: "Philosopher's Path",
    description: "A picturesque stone path lined with hundreds of cherry trees along a peaceful canal.",
    image: "https://images.unsplash.com/photo-1531986362435-16b427eb9c26",
