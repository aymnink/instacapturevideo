const title = "Hidden Paris Photography Guide";
const description = "Discover secret spots and hidden gems in Paris that most tourists never find.";

const photoSpots = [
  {
    title: "Rue des Thermopyles",
    description: "A hidden cobblestone street in the 14th arrondissement with cottage-like houses and climbing vines.",
    image: "https://images.unsplash.com/photo-1532295454114-d7bc89024613",
    coordinates: "48.8334¬∞ N, 2.3204¬∞ E",
    bestTime: "Midday",
    difficulty: "Easy",
    crowdLevel: "Low"
  },
  {
    title: "Cour Damoye",
    description: "A secret passage near Bastille with historic architecture and charming cafes.",
    image: "https://images.unsplash.com/photo-1669408276432-10cd3a07fe89",
    coordinates: "48.8528¬∞ N, 2.3702¬∞ E",
    bestTime: "Morning",
    difficulty: "Easy",
    crowdLevel: "Low"
  },
  {
    title: "Villa de l'Ermitage",
    description: "Hidden street with artists' workshops and colorful houses in Belleville.",
    image: "https://images.unsplash.com/photo-1542086490-11a8654691d0",
    coordinates: "48.8705¬∞ N, 2.3843¬∞ E",
    bestTime: "Afternoon",
    difficulty: "Easy",
    crowdLevel: "Low"
  }
];

const photographyTips = [
  {
    title: "Light and Timing",
    content: "Early morning provides the best light and fewest tourists.",
    icon: "üåÖ"
  },
  {
    title: "Local Etiquette",
    content: "Always ask permission before photographing people or private courtyards.",
    icon: "ü§ù"
  },
  {
    title: "Hidden Entrances",
    content: "Many secret spots are through unmarked passages - look for small doors and archways.",
    icon: "üö™"
