const photoSpots = [
  {
    title: "Roosevelt Island Tramway",
    description: "Aerial views of Manhattan's East Side during sunset, perfect for cityscape photography.",
    image: "https://images.unsplash.com/photo-1572573309811-48474d1891b7",
