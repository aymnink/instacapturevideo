---
import Layout from '../../layouts/Layout.astro';
import CategoryHero from '../../components/CategoryHero.astro';
import DestinationCard from '../../components/DestinationCard.astro';

const title = "Instagram-Worthy Destinations";
const description = "Discover the world's most photogenic locations, from hidden urban gems to stunning natural landscapes.";

const categories = [
  {
    title: "Best Photo Spots",
    description: "Iconic locations that will make your Instagram feed pop",
    image: "https://images.unsplash.com/photo-1669408276432-10cd3a07fe89",
    href: "/instagram-destinations/best-photo-spots"
  },
  {
    title: "Hidden Gems",
    description: "Off-the-beaten-path locations for unique shots",
    image: "https://images.unsplash.com/photo-1542086490-11a8654691d0",
    href: "/instagram-destinations/hidden-gems"
  },
  {
    title: "Trending Locations",
    description: "Currently popular spots among photographers and influencers",
    image: "https://images.unsplash.com/photo-1675154092378-1ca4978ec6a5",
    href: "/instagram-destinations/trending"
  }
];

const featuredDestinations = [
  {
    title: "Santorini's Blue Domes",
    description: "The ultimate guide to capturing Santorini's iconic architecture and stunning sunsets.",
    image: "https://images.unsplash.com/photo-1611001897293-561e0c30f938",
    href: "/instagram-destinations/best-photo-spots/santorini",
    location: "Greece"
  },
  {
    title: "Hidden Paris",
    description: "Secret spots in the City of Light that most tourists never discover.",
    image: "https://images.unsplash.com/photo-1595039838779-f3780873afdd",
    href: "/instagram-destinations/hidden-gems/paris",
    location: "France"
  },
  {
    title: "NYC Rooftop Guide",
    description: "The best rooftop locations for capturing New York's spectacular skyline.",
    image: "https://images.unsplash.com/photo-1572573309811-48474d1891b7",
    href: "/instagram-destinations/hidden-gems/new-york",
    location: "USA"
  },
  {
    title: "Kyoto in Bloom",
    description: "A photographer's guide to cherry blossom season in Japan's cultural heart.",
    image: "https://images.unsplash.com/photo-1531986362435-16b427eb9c26",
    href: "/instagram-destinations/trending/kyoto-cherry-blossoms",
    location: "Japan"
  }
];
---

<Layout 
  title={title}
  description={description}
>
  <CategoryHero
    title={title}
    description={description}
    image="https://images.unsplash.com/photo-1542086490-11a8654691d0"
  />

  <!-- Categories Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold mb-8">Explore Categories</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {categories.map(category => (
          <a 
            href={category.href}
            class="group relative h-64 rounded-lg overflow-hidden"
          >
            <img
              src={`${category.image}?w=600&q=80&auto=format&fit=crop`}
              alt={category.title}
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/50 to-transparent">
              <div class="absolute bottom-0 p-6">
                <h3 class="text-xl font-bold text-white mb-2">{category.title}</h3>
                <p class="text-gray-200 text-sm">{category.description}</p>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Destinations -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold mb-8">Featured Destinations</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-8">
        {featuredDestinations.map(destination => (
          <DestinationCard {...destination} />
        ))}
      </div>
    </div>
  </section>

  <!-- Photography Tips -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-white rounded-2xl p-8 md:p-12 shadow-sm">
        <h2 class="text-3xl font-bold mb-6">Photography Tips</h2>
        <div class="grid md:grid-cols-3 gap-8">
          <div>
            <h3 class="text-xl font-semibold mb-3">Best Time to Shoot</h3>
            <p class="text-gray-600">Learn about golden hour, blue hour, and the perfect timing for each location.</p>
          </div>
          <div>
            <h3 class="text-xl font-semibold mb-3">Camera Settings</h3>
            <p class="text-gray-600">Recommended settings for different scenarios and lighting conditions.</p>
          </div>
          <div>
            <h3 class="text-xl font-semibold mb-3">Composition Tips</h3>
            <p class="text-gray-600">Master the art of framing and composing your travel photos.</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>