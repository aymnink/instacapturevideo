    image: "https://images.unsplash.com/photo-1542086490-11a8654691d0",
    coordinates: "35.7147¬∞ N, 139.7967¬∞ E",
    bestTime: "Day",
    difficulty: "Moderate",
    crowdLevel: "Extreme"
  },
  {
    title: "Takayama Festival",
    description: "Historic festival with ornate floats in the Japanese Alps.",
    image: "https://images.unsplash.com/photo-1669408276432-10cd3a07fe89",
    coordinates: "36.1408¬∞ N, 137.2520¬∞ E",
