const photographyTips = [
  {
    title: "Festival Timing",
    content: "Research exact dates and parade routes. Position yourself early for key spots.",
    icon: "‚è∞"
  },
  {
    title: "Night Photography",
    content: "Use fast lenses and high ISO for evening parades. Consider monopod for stability.",
    icon: "üåô"
  },
  {
