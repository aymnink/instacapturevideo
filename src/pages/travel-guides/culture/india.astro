const photographyTips = [
  {
    title: "Festival Protection",
    content: "Use weather-sealed gear and protective covers during Holi. Consider disposable camera covers.",
    icon: "üé®"
  },
  {
    title: "Cultural Sensitivity",
    content: "Always ask permission before photographing ceremonies. Remove shoes at temples.",
    icon: "üôè"
