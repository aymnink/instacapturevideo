const photographyTips = [
  {
    title: "Temple Etiquette",
    content: "Dress modestly, remove shoes, ask permission for photos of monks.",
    icon: "üôè"
  },
  {
    title: "Lighting Tips",
    content: "Early morning for best light on golden stupas. Avoid harsh midday sun.",
    icon: "üåÖ"
