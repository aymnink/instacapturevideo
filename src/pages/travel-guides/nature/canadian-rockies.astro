  },
  {
    title: "Spirit Island",
    description: "Tiny island in Maligne Lake surrounded by mountains.",
    image: "https://images.unsplash.com/photo-1542086490-11a8654691d0",
    coordinates: "52.7175¬∞ N, 117.6347¬∞ W",
    bestTime: "Midday",
    difficulty: "Moderate",
    crowdLevel: "Moderate"
  },
  {
    title: "Peyto Lake",
    description: "Wolf-shaped turquoise lake viewed from Bow Summit.",
    image: "https://images.unsplash.com/photo-1669408276432-10cd3a07fe89",
    coordinates: "51.7255¬∞ N, 116.5226¬∞ W",
    bestTime: "Morning",
    difficulty: "Easy",
