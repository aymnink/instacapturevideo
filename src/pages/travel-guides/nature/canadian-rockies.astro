    coordinates: "50.8683¬∞ N, 115.6500¬∞ W",
    bestTime: "Sunrise",
    difficulty: "Hard",
    crowdLevel: "Low"
  }
];

const photographyTips = [
  {
    title: "Wildlife Safety",
    content: "Maintain safe distances from wildlife. Carry bear spray and make noise while hiking.",
    icon: "üêª"
  },
  {
    title: "Lake Photography",
    content: "Visit lakes early morning for calm reflections. Use polarizing filters.",
    icon: "üíß"
  },
  {
    title: "Seasonal Access",
    content: "Some roads close in winter. Check park websites for current conditions.",
    icon: "üöó"
