const photographyTips = [
  {
    title: "Mountain Light",
    content: "Plan for alpenglow during golden hour. Watch weather patterns for dramatic clouds.",
    icon: "üåÑ"
  },
  {
    title: "High Altitude",
    content: "Protect gear from cold and moisture. Batteries drain faster at altitude.",
    icon: "‚ùÑÔ∏è"
