const photographyTips = [
  {
    title: "Desert Haze",
    content: "Shoot during winter months for clearer air. Use polarizing filters to cut through haze.",
    icon: "üåá"
  },
  {
    title: "Night Photography",
    content: "Use f/8-f/11 for sharp cityscapes. Tripod essential for blue hour shots.",
    icon: "üåÉ"
