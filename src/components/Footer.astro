---
import Logo from './Logo.astro';

const navigation = [
  {
    title: "Tools",
    links: [
      { title: "Instagram Downloader", href: "/tools/instagram-downloader" }
    ]
  },
  {
    title: "Blog",
    links: [
      { title: "Photography Tips", href: "/blog/photography-tips" },
      { title: "Explore Destinations", href: "/blog/instagram-destinations" }
    ]
  },
  {
    title: "Support",
    links: [
      { title: "FAQ", href: "/faq" }
    ]
  },
  {
    title: "Legal",
    links: [
      { title: "Terms of Service", href: "/terms" },
      { title: "Privacy Policy", href: "/privacy" }
    ]
  }
];
---

<footer class="bg-brand-blue">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8">
      <div class="col-span-1 lg:col-span-2">
        <div class="flex items-center space-x-3 mb-4">
          <Logo className="h-8 w-8" />
          <span class="text-xl font-bold text-white">InstaCapture</span>
        </div>
        <p class="text-gray-200 text-sm">Your ultimate Instagram content downloader for capturing and saving beautiful moments.</p>
      </div>

      {navigation.map(section => (
        <div>
          <h3 class="text-lg font-semibold text-white mb-4">{section.title}</h3>
          <ul class="space-y-2">
            {section.links.map(link => (
              <li>
                <a
                  href={link.href}
                  class="text-gray-200 hover:text-white text-sm transition-colors"
                >
                  {link.title}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <div class="mt-8 border-t border-brand-pink/20 pt-8">
      <p class="text-gray-200 text-sm text-center">
        Â© {new Date().getFullYear()} InstaCapture. All rights reserved.
      </p>
    </div>
  </div>
</footer>