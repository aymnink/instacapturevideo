---
import { getImageWithParams } from '../utils/images';

interface Props {
  title: string;
  description: string;
  href: string;
  category: string;
  image?: string;
}

const { title, description, href, category, image } = Astro.props;
const imageUrl = getImageWithParams(image || 'https://images.unsplash.com/photo-1669408276432-10cd3a07fe89');
---

<article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow">
  <div class="aspect-w-16 aspect-h-9">
    <img 
      src={imageUrl}
      alt={title}
      class="w-full h-48 object-cover"
      loading="lazy"
    />
  </div>
  <div class="p-6">
    <div class="text-sm text-blue-600 font-semibold mb-2">{category}</div>
    <h3 class="text-xl font-bold mb-2">
      <a href={href} class="hover:text-blue-600 transition-colors">
        {title}
      </a>
    </h3>
    <p class="text-gray-600">{description}</p>
  </div>
</article>