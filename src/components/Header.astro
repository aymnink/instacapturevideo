---
import Logo from './Logo.astro';

const navigation = [
  {
    title: "Instagram Downloader",
    path: "/tools/instagram-downloader"
  },
  {
    title: "Blog",
    path: "/blog"
  },
  {
    title: "FAQ",
    path: "/faq"
  }
];
---

<header class="bg-white shadow-sm sticky top-0 z-50">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8" aria-label="Top">
    <div class="w-full py-4 flex items-center justify-between">
      <div class="flex items-center">
        <a href="/" class="flex items-center space-x-3">
          <Logo className="h-8 w-8" />
          <span class="text-xl sm:text-2xl font-bold text-gray-900">InstaCapture</span>
        </a>
      </div>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex space-x-8">
        {navigation.map((item) => (
          <a 
            href={item.path} 
            class="text-base font-medium text-gray-500 hover:text-brand-blue transition-colors"
          >
            {item.title}
          </a>
        ))}
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button 
          type="button" 
          class="text-gray-500 hover:text-brand-blue p-2"
          aria-label="Toggle menu"
        >
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile menu -->
    <div class="md:hidden hidden">
      <div class="py-2 space-y-1">
        {navigation.map((item) => (
          <a
            href={item.path}
            class="block px-4 py-2 text-base font-medium text-gray-700 hover:text-brand-blue hover:bg-gray-50 rounded-md"
          >
            {item.title}
          </a>
        ))}
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  const menuButton = document.querySelector('button[aria-label="Toggle menu"]');
  const mobileMenu = document.querySelector('.md\\:hidden.hidden');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Close mobile menu when clicking outside
  document.addEventListener('click', (event) => {
    const target = event.target as HTMLElement;
    if (!target.closest('button[aria-label="Toggle menu"]') && !target.closest('.md\\:hidden')) {
      mobileMenu?.classList.add('hidden');
    }
  });
</script>