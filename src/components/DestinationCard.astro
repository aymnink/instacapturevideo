---
import { getImageWithParams } from '../utils/images';

interface Props {
  title: string;
  description: string;
  image: string;
  href: string;
  location: string;
  readTime?: string;
}

const { title, description, image, href, location, readTime = "5 min read" } = Astro.props;
---

<article class="flex flex-col bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow">
  <div class="relative">
    <img 
      src={getImageWithParams(image, 600)}
      alt={title}
      class="w-full h-64 object-cover"
      loading="lazy"
    />
    <div class="absolute bottom-0 left-0 right-0 p-4 bg-gradient-to-t from-black/60 to-transparent">
      <span class="inline-block px-3 py-1 text-sm text-white bg-blue-600 rounded-full">
        {location}
      </span>
    </div>
  </div>
  <div class="flex-1 p-6">
    <h3 class="text-xl font-bold mb-2">
      <a href={href} class="hover:text-blue-600 transition-colors">
        {title}
      </a>
    </h3>
    <p class="text-gray-600 mb-4">{description}</p>
    <div class="flex items-center justify-between text-sm text-gray-500">
      <span>{readTime}</span>
      <a href={href} class="text-blue-600 hover:text-blue-700 font-medium">
        Read more â†’
      </a>
    </div>
  </div>
</article>