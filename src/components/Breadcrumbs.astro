---
interface Props {
  paths: {
    name: string;
    href: string;
  }[];
}

const { paths } = Astro.props;
---

<nav aria-label="Breadcrumb" class="w-full py-4">
  <ol class="flex flex-wrap items-center space-x-2 text-sm text-gray-500">
    <li>
      <a href="/" class="hover:text-brand-blue transition-colors">Home</a>
    </li>
    {paths.map((path, index) => (
      <>
        <li>
          <span class="mx-2">/</span>
        </li>
        <li class={index === paths.length - 1 ? "text-gray-900" : ""}>
          {index === paths.length - 1 ? (
            <span>{path.name}</span>
          ) : (
            <a href={path.href} class="hover:text-brand-blue transition-colors">
              {path.name}
            </a>
          )}
        </li>
      </>
    ))}
  </ol>
</nav>